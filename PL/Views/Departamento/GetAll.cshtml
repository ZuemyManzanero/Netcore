@model ML.Departamento
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Departamentos</h2>

<div class="row">
    <div class="col-md-12">
        <h5>Seleccione un registro para editarlo o (+) para agregar...</h5>
        <hr />
    </div>

</div>

<div style="float:right;">
    @Html.ActionLink("Agregar", "Form", "Depatamento", htmlAttributes: new { @class = "btn btn-success" })
</div>

<table class="table table-bordered table-responsive">
    <thead>
        <tr>
            <td>Editar</td>
            <td style ="display : none; ">IdDepartamento</td>
            <td>Nombre</td>
            <td>AreaNombre</td>
            <td>Eliminar</td>
        </tr>
    </thead>
    <tbody>
        @foreach (ML.Departamento departamento in Model.Departamentos)
        {
            <tr>
                <td><a class="btn btn-warning" style ="gi" href="@Url.Action("Form", "Departamento", new { IdDepartamento = departamento.IdDepartamento })"></a></td>
                <td style ="display :none;">@departamento.IdDepartamento</td>
                <td>@departamento.Nombre</td>
                <td>@departamento.Area.Nombre</td>
            <td><a class="btn btn-danger glyphicon glyphicon-trash" href="@Url.Action("Delete", "DepartamentoController", new { IdDepartamento = departamento.IdDepartamento})" onclick="return confirm('Estas seguro que deseas eliminar este registro?');"></a></td>
        </tr>
        }
    </tbody>
</table>
